<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:padding="20dp" >

    <Button
        android:id="@+id/bt_menu_terminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_terminal"
        android:text="@string/vacia" />

    <TextView
        android:id="@+id/tv_menu_terminal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_menu_terminal"
        android:layout_alignRight="@+id/bt_menu_terminal"
        android:layout_below="@+id/bt_menu_terminal"
        android:gravity="center"
        android:text="@string/terminal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/bt_menu_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_menu_terminal"
        android:layout_alignBottom="@+id/bt_menu_terminal"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_gps"
        android:text="@string/vacia" />

    <TextView
        android:id="@+id/tv_menu_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt_menu_gps"
        android:layout_alignRight="@+id/bt_menu_gps"
        android:layout_below="@+id/bt_menu_gps"
        android:gravity="center"
        android:text="@string/gps"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>